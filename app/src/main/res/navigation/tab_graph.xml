<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_graph"
    app:startDestination="@id/tabFragment">

    <fragment
        android:id="@+id/tabFragment"
        android:name="com.ephirium.storyline.ui.fragment.TabFragment"
        android:label="fragment_tab"
        tools:layout="@layout/fragment_tab" >
        <action
            android:id="@+id/action_tabFragment_to_post_page_graph"
            app:destination="@id/post_page_graph" />
        <action
            android:id="@+id/action_tabFragment_to_create_graph"
            app:destination="@id/create_graph" />
        <action
            android:id="@+id/action_tabFragment_to_profile_graph"
            app:destination="@id/profile_graph" />
    </fragment>
    <include app:graph="@navigation/post_page_graph" />
    <include app:graph="@navigation/create_graph" />
    <include app:graph="@navigation/profile_graph" />
</navigation>